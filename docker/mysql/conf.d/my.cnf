[mysqld]
# ===============================
# Configuración del servidor MySQL - Restobar Luxury Moon
# ===============================

# Codificación y zona horaria
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
default-time-zone = America/Lima

# Seguridad y autenticación
max_connect_errors = 100
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION
skip-name-resolve = 1

# ⚙️ Conexiones
max_connections = 60
thread_cache_size = 32
wait_timeout = 600
interactive_timeout = 600

# Buffer pool (gestión de memoria y caché)
innodb_buffer_pool_size = 4G
innodb_buffer_pool_instances = 1
innodb_file_per_table = 1

# Rendimiento y operaciones de E/S
innodb_flush_method = O_DIRECT
innodb_io_capacity = 200
innodb_idle_flush_pct = 30
innodb_max_dirty_pages_pct_lwm = 10
innodb_max_dirty_pages_pct = 90

# Buffers y tablas temporales
join_buffer_size = 8M
sort_buffer_size = 8M
tmp_table_size = 64M
max_heap_table_size = 64M

# Tamaños máximos
max_allowed_packet = 64M

# Logs y diagnóstico
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2
log_error = /var/log/mysql/error.log

# Otros ajustes
innodb_log_file_size = 128M
innodb_flush_neighbors = 0
performance_schema = ON
